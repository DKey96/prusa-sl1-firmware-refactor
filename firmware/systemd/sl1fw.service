[Unit]
Description=SL1 firmware
Requires=mnt-usb.automount mnt-rootfs.automount

[Service]
WorkingDirectory=/lib/python2.7/site-packages/sl1fw
ExecStartPre=/usr/bin/sh -c "/usr/bin/echo 0 > /sys/class/vtconsole/vtcon1/bind"
ExecStart=/usr/bin/nohup python -u /usr/bin/main.py
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target


